@page "{id:int}"
@model Day30_BookStoreAppAssignment.Pages.Books.DeleteBookModel
@{
    ViewData["Title"] = "Delete Book";
}

<h2>Delete Book</h2>

<div>
    <h4>Are you sure you want to delete this book?</h4>
    <p><strong>@Model.BookToDelete.Title</strong> by @Model.BookToDelete.Author</p>
</div>

<form method="post">
    <input type="hidden" asp-for="BookToDelete.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Books/BookList" class="btn btn-secondary">Cancel</a>
</form>