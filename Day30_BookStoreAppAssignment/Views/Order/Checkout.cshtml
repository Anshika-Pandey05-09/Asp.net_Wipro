@model List<Day30_BookStoreAppAssignment.Models.CartItem>
@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Price</td>
            <td>@item.Quantity</td>
            <td>@(item.Price * item.Quantity)</td>
        </tr>
    }
    </tbody>
</table>

<h4>Total: @Model.Sum(c => c.Price * c.Quantity)</h4>

<form asp-action="PlaceOrder" method="post">
    <button type="submit" class="btn btn-primary">Confirm Order</button>
</form>