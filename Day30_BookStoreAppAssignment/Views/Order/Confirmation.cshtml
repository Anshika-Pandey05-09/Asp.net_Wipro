@model Day30_BookStoreAppAssignment.Models.Order
@{
    ViewData["Title"] = "Order Confirmation";
}

<h2>Order Confirmation</h2>

<p>Thank you! Your order has been placed successfully.</p>

<h4>Order ID: @Model.Id</h4>
<p>User: @Model.UserEmail</p>
<p>Date: @Model.OrderDate</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Items)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Price</td>
            <td>@item.Quantity</td>
            <td>@(item.Price * item.Quantity)</td>
        </tr>
    }
    </tbody>
</table>

<h4>Grand Total: @Model.Total</h4>

<a asp-controller="Books" asp-action="Index" class="btn btn-secondary">Continue Shopping</a>